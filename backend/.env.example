# ============================================================
# Configuration de l'application Prospection Foncière
# Copiez ce fichier en .env et renseignez vos valeurs
# ============================================================

# ---- Application ----
ENVIRONMENT=production          # development | staging | production
DEBUG=false                     # true = active /docs et /redoc
APP_VERSION=2.0.0

# ---- Serveur ----
HOST=0.0.0.0
PORT=8000
WORKERS=4                       # Nombre de workers Gunicorn

# ---- CORS ----
CORS_ORIGINS=https://votre-domaine.com,https://www.votre-domaine.com

# ---- Sécurité JWT (OBLIGATOIRE en production) ----
# Générer avec : python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ---- Base de données SQLite ----
DATABASE_URL=sqlite:////data/prospection.db

# ---- Microsoft Azure AD (optionnel) ----
MSAL_CLIENT_ID=
MSAL_TENANT_ID=

# ---- Redis Cache (optionnel) ----
REDIS_URL=redis://redis:6379/0
CACHE_TTL=300
CACHE_ENABLED=true

# ---- APIs externes ----
API_TIMEOUT=30.0
API_MAX_RETRIES=3

# ---- Rate limiting ----
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ---- Logging ----
LOG_LEVEL=INFO
LOG_FORMAT=json
