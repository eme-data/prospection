# ============================================
# Configuration Prospection Fonciere API
# ============================================
# Copiez ce fichier en .env et adaptez les valeurs

# Application
ENVIRONMENT=production  # development, staging, production
DEBUG=false
APP_VERSION=2.0.0

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS - Origines autorisees (separes par des virgules)
CORS_ORIGINS=https://prospection.example.com,https://www.prospection.example.com

# Security
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
# API_KEY=your-secret-api-key-here  # Optionnel, decommentez pour activer

# Redis Cache (optionnel mais recommande en production)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300
CACHE_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json ou console

# Timeouts
API_TIMEOUT=30.0
API_MAX_RETRIES=3
